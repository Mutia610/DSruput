<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    tools:context=".view.RegisterFragment">

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_back"
        android:text="back"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/txtBack"
       android:gravity="center"
       android:padding="30dp"
       android:orientation="vertical">

       <TextView
           android:id="@+id/txtTittle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginBottom="50dp"
           android:layout_below="@id/txtBack"
           android:text="Isi Data Registrasi Berikut"
           android:layout_centerHorizontal="true"
           android:textSize="21sp"
           android:textColor="@color/colorOrangeDark"
           android:textStyle="bold"/>

       <EditText
           android:id="@+id/etNama"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@drawable/backgr_login"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:hint="Nama"
           android:inputType="text"
           android:textSize="18sp"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"/>

       <EditText
           android:id="@+id/etEmail"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="15dp"
           android:background="@drawable/backgr_login"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:hint="Email"
           android:inputType="text"
           android:textSize="18sp"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"/>

       <EditText
           android:id="@+id/etPassword"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="15dp"
           android:background="@drawable/backgr_login"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:hint="Password"
           android:inputType="text"
           android:textSize="18sp"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"/>

       <EditText
           android:id="@+id/etPasswordKonfirmasi"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="15dp"
           android:background="@drawable/backgr_login"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:hint="Konfirmasi Password"
           android:inputType="text"
           android:textSize="18sp"
           android:textColor="@color/colorBlack"
           android:textStyle="bold"/>

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:background="@drawable/backgr_button_register"
           android:text="Save"
           android:textStyle="bold"
           android:textColor="@color/colorWhite"
           android:textSize="18sp"/>

   </LinearLayout>

</RelativeLayout>