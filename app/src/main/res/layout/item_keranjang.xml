<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgMenuKeranjang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/minuman" />

        <TextView
            android:id="@+id/txtRasaKrj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgMenuKeranjang"
            android:fontFamily="@font/roboto_bold"
            android:text="Brown Boba Milky"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtVarianKrj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRasaKrj"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgMenuKeranjang"
            android:fontFamily="@font/roboto"
            android:text="Brown Boba Milky"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTambahanKrj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtVarianKrj"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:layout_toRightOf="@id/imgMenuKeranjang"
            android:fontFamily="@font/roboto"
            android:text="Ice + topping strawberry"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/imgMenuKeranjang"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/hargaSatuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRasaKrj"
                android:layout_toRightOf="@id/imgMenuKeranjang"
                android:fontFamily="@font/roboto"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                android:text="13000"
                android:textColor="@color/colorGray"
                android:textSize="12sp"
                android:layout_marginRight="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtRpKrj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVarianKrj"
                android:layout_toRightOf="@id/imgMenuKeranjang"
                android:fontFamily="@font/roboto_medium"
                android:text="Rp."
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHargaKrj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVarianKrj"
                android:layout_toRightOf="@id/txtRpKrj"
                android:fontFamily="@font/roboto_medium"
                android:text="13.000"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

        </LinearLayout>


