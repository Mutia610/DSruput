<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/upi" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/namaOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="D'Sruput Simpang Anduring"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/alamatOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaOutlet"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/card1"
                android:text="Jl. Raya Lubuk Begalung No.12, RT./RW/RW.003/003, Kelurahan Lubuk Begalung Nan XX, Kec.Lubeg"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/jarakOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/backgr_distance"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="3 km"
                android:textColor="@color/colorNavyBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>