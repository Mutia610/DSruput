<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:cardBackgroundColor="@color/colorWhite"-->
<!--        app:cardUseCompatPadding="true"-->
<!--        app:cardCornerRadius="60dp"-->
<!--        >-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/backgr_image"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgOutlet"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/upi"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/namaOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgOutlet"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="D'Sruput Simpang Anduring"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/alamatOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaOutlet"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/imgOutlet"
                android:text="Jl. Raya Lubuk Begalung No.12, RT./RW/RW.003/003, Kelurahan Lubuk Begalung Nan XX, Kec.Lubeg"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/jarakOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgr_distance"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="3 km"
                android:textColor="@color/colorNavyBlue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
</LinearLayout>