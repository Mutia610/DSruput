<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorWhite"
    tools:context=".view.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@drawable/gambar_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Credential Login"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/emailLogin"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:textColorHint="@color/colorGray"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:background="@drawable/backgr_login"
            android:drawableLeft="@drawable/ic_email"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:inputType="textEmailAddress"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/passwordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:textColorHint="@color/colorGray"
                    android:paddingLeft="10dp"
                    android:paddingRight="45dp"
                    android:background="@drawable/backgr_login"
                    android:drawableLeft="@drawable/ic_password"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="normal"
                    android:inputType="textPassword"/>

                <CheckBox
                    android:id="@+id/chkShowPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/ic_visibility_off"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    />

                <CheckBox
                    android:id="@+id/chkShowPass2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:button="@drawable/ic_eye"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </FrameLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/backgr_button_login"
            android:text="Sign In"
            android:textColor="@color/colorWhite"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Belum Punya Akun ?"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/backgr_button_register"
            android:text="Sign Up"
            android:textColor="@color/colorBlue"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</ScrollView>